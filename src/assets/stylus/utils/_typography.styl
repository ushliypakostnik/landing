// Typographic Variables
//////////////////////////////////////////////////////

// Guide

$letter-spacing = {
  normal: normal
}

$font-weight = {
  regular: 400,
  medium: 500,
  bold: 700,
}

// Universal Typographic Mixin
//////////////////////////////////////////////////////

// We use one, only one, Karl, a universal mixin for all cases !!!!!!!!!!

$text($name)
  font-family "Golos Text"
  letter-spacing $letter-spacing.normal

  // Заголовки
  if $name == "primo"
    font-size 72px
    line-height 72px
    font-weight $font-weight.bold
  if $name == "gouda"
    font-size 56px
    line-height 56px
    font-weight $font-weight.bold
  if $name == "cheddar"
    font-size 40px
    line-height 44px
    font-weight $font-weight.bold
  if $name == "camembert"
    font-size 32px
    line-height 36px
    font-weight $font-weight.bold
  if $name == "ricotta"
    font-size 28px
    line-height 32px
    font-weight $font-weight.bold
  if $name == "burrata"
    font-size 24px
    line-height 28px
    font-weight $font-weight.bold
  if $name == "taleggio"
    font-size 20px
    line-height 24px
    font-weight $font-weight.bold
  if $name == "comte"
    font-size 20px
    line-height 28px
    font-weight $font-weight.bold
  if $name == "bryndza"
    font-size 16px
    line-height 20px
    font-weight $font-weight.bold
  if $name == "tulum"
    font-size 16px
    line-height 24px
    font-weight $font-weight.bold
  // Основной наборный текст
  if $name == "mascarpone"
    font-size 20px
    line-height 28px
    font-weight $font-weight.regular
  if $name == "brie"
    font-size 20px
    line-height 24px
    font-weight $font-weight.regular
  if $name == "parmigiano"
    font-size 16px
    line-height 24px
    font-weight $font-weight.regular
  if $name == "feta"
    font-size 16px
    line-height 20px
    font-weight $font-weight.regular
  // Дополнительный текст
  if $name == "mozzarella"
    font-size 13px
    line-height 16px
    font-weight $font-weight.regular
  if $name == "roquefort"
    font-size 13px
    line-height 16px
    font-weight $font-weight.bold
  if $name == "zamorano"
    font-size 13px
    line-height 20px
    font-weight $font-weight.regular
  if $name == "сaprino"
    font-size 10px
    line-height 12px
    font-weight $font-weight.regular
  // Контролы
  if $name == "maasdam"
    font-size 20px
    line-height 24px
    font-weight $font-weight.medium
  if $name == "sulguni"
    font-size 16px
    line-height 20px
    font-weight $font-weight.medium
  if $name == "briscola"
    font-size 13px
    line-height 16px
    font-weight $font-weight.medium
  if $name == "edam"
    font-size 10px
    line-height 12px
    font-weight $font-weight.medium
