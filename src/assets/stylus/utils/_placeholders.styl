// Кнопка
$button
  user-select none
  cursor pointer
  border none
  text-decoration none
  white-space nowrap
  outline none
  text-align center

  &--primary
    background $colors.rocky
    background var(--rocky)
    color $colors.white
    color var(--white)

    &:hover
      background $colors.rockyHover
      background var(--rockyHover)

    &:active
      background $colors.rockyPressed
      background var(--rockyPressed)

  &--secondary
    background $colors.avengers
    background var(--avengers)
    color $colors.rocky
    color var(--rocky)

    &:hover
      background $colors.avengersHover
      background var(--avengersHover)

    &:active
      background $colors.avengersPressed
      background var(--avengersPressed)

  &--disabled
    pointer-events none
    cursor default
    opacity $opacites.biqe
