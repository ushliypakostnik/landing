//////////////////////////////////////////////////////
//////////////////////////////////////////////////////
// Фундаментальное отличие миксинов от плейсхолдеров в том что, кроме нюансов при компиляции -
// плейсхолдеры, в отличие от параметризированных миксинов, не могут быть включены в медиа-запросы,
// но сами, при этом, могут их использовать. Примеси могут принимать аргументы и самое важное - контент.

// Media
//////////////////////////////////////////////////////
// Breakpoints in _variables.styl

$desktops()
  @media only screen and (min-width $breakpoints.desktop)
    {block}

$widest()
  @media only screen and (min-width $breakpoints.large)
    {block}

$wide()
  @media only screen and (min-width $breakpoints.desktop) and (max-width $breakpoints.desktop--max)
    {block}

$gadgets()
  @media only screen and (max-width $breakpoints.tablet--max)
    {block}

$middle()
  @media only screen and (min-width $breakpoints.tablet) and (max-width $breakpoints.tablet--max)
    {block}

$not-narrow()
  @media only screen and (min-width $breakpoints.tablet)
    {block}

$narrow()
  @media only screen and (max-width $breakpoints.mobile--max)
    {block}


